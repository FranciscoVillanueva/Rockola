@*@model List<Google.Apis.YouTube.v3.Data.SearchResult>*@
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    ViewBag.Title = "SearchList";
}

<h2>SearchList</h2>

<input type="text" class="form-control" id="Search" placeholder="busca" />
<a class="btn btn-default" href="javascript:void(0)" onclick="btnSearch()">Search</a>
<br />
<div id="play">

</div>

<h2>Search Results</h2>
<p>To play a video, just click the image.</p>

<div class="container" id="ListYoutubeVideos">

</div>

<h2>Playlist</h2>

<style>

    #ListYoutube {
        grid-area: ListYoutube;
        height: 300px;
        overflow-y: scroll
    }

    .box div {
        width: 300px;
        display: inline-flex;
        padding: 15px;
    }

    #playlist {
        overflow-x: scroll;
    }
</style>


<div style="overflow-x:scroll;">
    <table class="table table-striped table-bordered table-hover">
        <tr id="playlist">

        </tr>
    </table>
</div>

@*https://developers.google.com/youtube/iframe_api_reference*@
<script>

    function btnSearch() {
        $.ajax(
            {
                url: '@Url.Action("SearchList","Youtube")?SearchWord=' + $('#Search').val(),
                type: 'GET',
                success: function (result) {
                    $('#ListYoutubeVideos').html(result);
                }
            });
    }

    function btnAddToPlayList(VideoId) {
        $.ajax(
            {
                url: '@Url.Action("AddToPlaylist","Youtube")?IdVideo=' + VideoId,
                type: 'GET',
                success: function (result) {
                    $('#playlist').html(result)
                }
            });
    }

    function btnPlay(Id) {
        $.ajax(
            {
                url: '@Url.Action("Play","Youtube")?IdVideo=' + Id,
                type: 'GET',
                success: function (result) {
                    $('#play').html(result);
                }
            });      
    }
</script>